<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="vendor/autoload.php"
         colors="true"
         verbose="true"
         stopOnFailure="false">
    <testsuites>
        <testsuite name="FoodieGo Test Suite">
            <directory>tests/unit</directory>
        </testsuite>
    </testsuites>
    <coverage>
        <include>
            <directory suffix=".php">application</directory>
        </include>
        <exclude>
            <directory>application/views</directory>
            <directory>application/config</directory>
        </exclude>
    </coverage>
    <php>
        <const name="PHPUNIT_TEST" value="true"/>
        <env name="APP_ENV" value="testing"/>
    </php>
</phpunit>